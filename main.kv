#This is my MainWidget

MainWidget:
    GridLayout:
        cols: 1
        rows: 2
        size: 200,200
        Label:
            id: myLabel
            text: "This is the label"
        Button: 
            text: "This is the button"
            on_press: root.ids.myLabel.text = "Button pressed"
            on_release: root.ids.myLabel.text = "This is the label"