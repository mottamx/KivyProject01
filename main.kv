# myapp.kv
<MenuWidget>:
    orientation: 'vertical'
    BoxLayout:
        size_hint_y: None
        height: 40  
        canvas.before:
            Color:
                rgba: 0.1, 0.3, 0.5, 1  # Background color
            Rectangle:
                pos: self.pos
                size: self.size

        Widget:
        Widget: 
        Widget: 

        Button:
            text: 'Texto'
            background_color: 0.2, 0.5, 0.7, 1
            on_release: app.root.current = 'main'

        Button:
            text: 'Config.'
            background_color: 0.2, 0.5, 0.7, 1
            on_release: app.root.current = 'config'

    Label:
        text: ''

<MainScreen>:
    name: "main"
    MenuWidget:
    Label:
        text: 'Hello, this is the Main Screen!'

<ConfigScreen>:
    name: "config"
    BoxLayout:
        orientation: 'vertical'
        MenuWidget:
        Label:
            text: 'So here you have to setup the device:'
        BoxLayout:
            orientation: 'horizontal'
            Label:
                text: 'This is a Label'
            Button:
                text: 'This is a Button'
